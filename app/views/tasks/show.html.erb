<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Task</div>
  <!-- List group -->
  <ul class="list-group">
    <li class="list-group-item">
      <h4>
        <strong>Name:</strong>
        <%= @task.name %>
      </h4>
    </li>
    <li class="list-group-item">
      <h4>
        <strong>Description:</strong>
        <%= @task.description %>
      </h4>
    </li>
    <li class="list-group-item">
      <h4>
        <strong>Raiting:</strong>
        <%= @task.raiting %>
      </h4>
    </li>
    <li class="list-group-item">
      <h4>
        <strong>Deadline:</strong>
        <%= @task.deadline %>
      </h4>
    </li>
    <li class="list-group-item">
      <h4>
        <strong>Ready:</strong>
        <%= render 'main/update_ready', locals: {:task => @task} %>
        <br><br>
        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= @task.ready %>%;">
            <%= @task.ready %>%
          </div>
        </div>
      </h4>
    </li>
  </ul>
</div>

<%= link_to 'Edit', edit_task_path(@task), class: "btn btn-default" %>
<%= link_to 'Back', :back, class: "btn btn-default" %>
